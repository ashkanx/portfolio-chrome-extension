{
  "manifest_version": 2,

  "name": "Binary.com Portfolio",
  "description": "This extension displays the open position contracts of Binary.com",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click to see the portfolio"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
